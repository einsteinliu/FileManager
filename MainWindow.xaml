<Window x:Class="MusicManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="500" SizeToContent = "WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height=".5*" ></RowDefinition>
            <RowDefinition  Height=".5*" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"></ColumnDefinition>
            <ColumnDefinition Width=".5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Row="0" Grid.Column="0" Name="tree" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
        <TreeView Grid.Row="0" Grid.Column="1" Name="tree1" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"/>
        <Button Grid.Row ="1" Grid.Column="0" Width="100" Height="30" Content="haha" Click="Button_Click"></Button>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Height="58" Margin="41.6,52.8,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
